section(id="section_card-panel")
    div(class="main_panel main_panel--card")
        div(class="main_panel__add")
            p(class="main_panel__add__text") add card
            div(class="main_panel__add__icon")
                img(class="icon" src="/images/plus-solid.svg" alt="plus icon")

    
        form(action="/user/dashboard"  method="POST" id="addCardForm" class="main_panel__form")
            label(for="question" class="main_panel__form__label") add your question
            textarea(
                type="textarea"
                name="question"
                id="question"
                class="main_panel__form__input main_panel__form__input--question"
                data-role="form-input"
                data-error="To add a question, you must enter the content.  Thecontent   have to shorter than"
                data-content="add your question")

            label(for="answer" class="main_panel__form__label") add your answer
            textarea(
                type="textarea"
                name="answer"
                id="answer"
                class="main_panel__form__input main_panel__form__input--answer"
                data-role="form-input"
                data-error="To add a question, you must enter question and answercontent. The content have to be shorter than"
                data-content="add your answer")

            label(for="category_input" class="main_panel__form__label") add category
            input(
                name="newCategory"
                id="category_input"
                type="text"
                class="main_panel__form__input main_panel__form__input--category"
                data-role="form-input"
                )
            label(
                for="checkboxes-cnt"
                data-content="choose your category"
                data-warning="Add category !!!"
                class="main_panel__form__label"
                ) choose your category
            div(
                class="main_panel__form__checkboxes-cnt"
                id="checkboxes-cnt"
                name="radioInputs")

                if categories
                    each category in categories
                        label(for=category)=category
                            input(
                                type="checkbox"
                                name="radio"
                                id=category
                                value=category
                                data-role="form-input"
                            )
        
            button(class="btn btn-success") add card